---
import Hero from "../components/Hero.astro";
import Layout from "../layouts/Layout.astro";
import heroImage from '../assets/images/Contact-Us-Hero.png';
import heroImageSM from '../assets/images/Contact-Us-Hero-SM.png';
import { Image } from 'astro:assets';
import Icon from "../components/Icon.astro";

---

<Layout
    title="Contact Us - Archytech"
    description="Contact Us Today and Let's Build Together!"
    robots={false}
    showFooter={false}
>

    <main class='relative flex min-h-lvh w-full bg-brand-black bg-blend-luminosity items-center px-6 pt-28 pb-10 md:pt-28 md:pb-0 lg:px-24'>
        <!-- Mobile Image -->
        <Image
            class='absolute inset-0 w-full h-full object-cover object-center block md:hidden'
            src={heroImageSM}
            alt="Contact Us Background Image"
            width="375"
            height="812"
        />

        <!-- Desktop Image -->
        <Image
            class='absolute inset-0 w-full h-full object-cover object-center hidden md:block'
            src={heroImage}
            alt="Contact Us Background Image"
            width="1440"
            height="1024"
        />
        <div
            class='bg-brand-black bg-blend-luminosity bg-opacity-90 z-10 absolute top-0 left-0 w-full h-full'
        >
        </div>
        <div class="flex flex-col container mx-auto z-20 md:flex-row">
            <section class="flex flex-col container mx-auto z-20 md:w-1/2">
                <div class="flex flex-col justify-center space-y-8">
                    <h2 class='text-white text-start font-semibold place-self-start text-2xl lg:text-3xl relative tracking-wide'>
                        CONTACT US
                        <span
                            class='after:absolute after:block after:w-[30%] after:h-[3px] after:bg-white after:mt-2 after:rounded-full'
                        ></span>
                    </h2>
                    <p class="text-white">
                        Contact us and let us know about your project, or find out more about our services.
                    </p>
                    <div class="flex items-center space-x-4">
                        <Icon 
                            href=`tel:000000000`
                            icon='icon-[mage--phone]' 
                            label=`Archytech phone number link`
                            iconColor='text-brand-black'
                            bgColor='bg-white'
                        />
                        <p class="text-white">000-000-0000</p>
                    </div>
                    <div class="flex items-center space-x-4">
                        <Icon 
                            href=`mailto:mail@archytech.design`
                            icon='icon-[eva--email-outline]' 
                            label=`Archytech email link`
                            iconColor='text-brand-black'
                            bgColor='bg-white'
                        />
                        <p class="text-white">mail@archytech.design</p>
                    </div>
                    <div class="flex space-x-4">
                        <Icon 
                            href=`https://maps.google.com/?q=0000+Design+Drive+Denver+Colorado`
                            icon='icon-[carbon--location]' 
                            label=`Archytech location link`
                            iconColor='text-brand-black'
                            bgColor='bg-white'
                        />
                        <div class="space-y-2">
                            <p class="text-white">ArchyTech Design</p>
                            <p class="text-white">0000 Design Drive</p>
                            <p class="text-white">Denver, Colorado</p>
                        </div>
                    </div>
                </div>
            </section>
            <section class="flex flex-col mt-8 container mx-auto z-20 md:mt-0 xl:w-1/2">
                <form class="space-y-6" data-netlify='true' method='post'>
                    <div class='relative'>
                        <label
                            class='absolute text-white text-sm left-0'
                            for='name'
                        >
                            Name
                        </label>
                        <input
                            class='relative rounded-none w-full appearance-none outline-none mt-6 bg-transparent py-2 text-white border-b-white border-b-2 focus:border-0 focus:border-b-2 focus:outline-none focus:ring-0 focus:border-brand-purple active:border-brand-purple'
                            type='text'
                            id='name'
                            name='name'
                            required
                        />
                    </div>
                    <div class='relative'>
                        <label
                            class='absolute text-white text-sm left-0'
                            for='phoneNumber'
                        >
                            Phone Number
                        </label>
                        <input
                            class='relative rounded-none w-full appearance-none outline-none mt-6 bg-transparent py-2 text-white border-b-white border-b-2 focus:border-0 focus:border-b-2 focus:outline-none focus:ring-0 focus:border-brand-purple active:border-brand-purple'
                            type='tel'
                            id='phoneNumber'
                            name='phoneNumber'
                            required
                        />
                    </div>
                    <div class='relative'>
                        <label
                            class='absolute text-white text-sm left-0'
                            for='email'
                        >
                            Email Address
                        </label>
                        <input
                            class='relative rounded-none w-full appearance-none outline-none mt-6 bg-transparent py-2 text-white border-b-white border-b-2 focus:border-0 focus:border-b-2 focus:outline-none focus:ring-0 focus:border-brand-purple active:border-brand-purple'
                            type='email'
                            id='email'
                            name='email'
                            required
                        />
                    </div>
                    <div class='relative'>
                        <label
                            class='absolute text-white text-sm left-0'
                            for='message'
                        >
                            Message
                        </label>
                        <textarea
                            class='relative rounded-none w-full appearance-none outline-none mt-8 h-16 bg-transparent text-white border-b-white border-b-2 focus:border-0 focus:border-b-2 focus:outline-none focus:ring-0 focus:border-brand-purple active:border-brand-purple'
                            id='message'
                            name='message'
                            required
                        />
                    </div>
                    <button
                        type='submit'
                        id='submit-contact-form-button'
                        class='mt-4 px-12 rounded-lg bg-brand-red border-[1px] py-2 font-visby-medium text-white hover:bg-opacity-80'
                    >
                    Submit
                    </button>
                </form>
                <div class='flex place-self-center md:place-self-end space-x-6 relative z-20 mt-16'>
                    <Icon
                        href='https://www.instagram.com'
                        icon='icon-[ri--instagram-line]'
                        label='Instagram Link'
                        iconColor="text-brand-black"
                        bgColor='bg-white'
                    />
                    <Icon
                        href='https://www.facebook.com'
                        icon='icon-[ri--facebook-fill]'
                        label='Facebook Link'
                        iconColor='text-brand-black'
                        bgColor='bg-white'
                    />
                    <Icon
                        href='https://www.linkedin.com'
                        icon='icon-[ri--linkedin-fill]'
                        label='LinkedIn Link'
                        iconColor='text-brand-black'
                        bgColor='bg-white'
                    />
                </div>
            </section>
        </div>
    </main>
</Layout>