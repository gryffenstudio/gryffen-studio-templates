---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ScrollProgress from '../components/ScrollProgress.astro';
import HomeSection from '../components/HomeSection.astro';
import section1ImgSM from '../assets/images/Section-1-Img-SM.png';
import section1Img from '../assets/images/Section-1-Img.png';
---

<Layout title='Landing - Archytech' description='Build with Archytech' robots={false}>
    <Hero>
        <div
            class='z-20 md:pl-16 relative flex w-full items-start justify-center flex-col space-y-8 md:space-y-10'
        >
            <p class='text-white text-sm md:text-md mt-64'>We believe in</p>
            <h1 class='hero-h1'>Great Architecure</h1>
            <p class='text-white md:text-xl md:w-[65%] lg:w-[44%]'>
                The foremost marketplace for designing and constructing houses globally,
                distinguished for its unparalleled reliability and trustworthiness.
            </p>
            <ScrollProgress
                isHeroScrollProgress={true}
                grayHeightClass={['h-12']}
                blackHeightClass={[['h-24']]}
                progress={0}
            />
        </div>
        <div
            class='bg-brand-black bg-blend-luminosity md:backdrop-blur-xl bg-opacity-50 z-10 absolute top-0 left-0 w-full md:w-[45%] h-full'
        >
        </div>
    </Hero>
    <main class='h-full w-full mt-8 px-4 items-center justify-center'>
        <HomeSection sectionNum={1} imageSrc={[section1ImgSM, section1Img]} />
    </main>
</Layout>
