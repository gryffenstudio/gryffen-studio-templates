---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
---

<Layout title='Landing - Archytech' description='Build with Archytech' robots={false}>
    <Hero>
        <div
            class='z-10 lg:pl-16 relative flex w-full items-start justify-center flex-col space-y-8'
        >
            <p class='text-white mt-64'>We believe in</p>
            <h1 class='text-white text-left text-5xl'>Great Architecure</h1>
            <p class='text-white lg:w-[50%]'>
                The foremost marketplace for designing and constructing houses globally,
                distinguished for its unparalleled reliability and trustworthiness.
            </p>
            <div class='flex space-x-6 items-center'>
                <div class='flex flex-col'>
                    <span class='h-12 border-l-2 border-solid border-brand-gray'></span>
                    <span class='h-24 border-l-2 border-solid border-brand-black'></span>
                </div>
                <p class='text-brand-gray'>Scroll to see how we work</p>
            </div>
        </div>
        <div
            class='hidden bg-brand-black bg-blend-luminosity backdrop-blur-xl bg-opacity-25 z-0 absolute top-0 left-0 w-[45%] h-full lg:block'
        >
        </div>
    </Hero>
    <main class='h-[8000px]'></main>
</Layout>
