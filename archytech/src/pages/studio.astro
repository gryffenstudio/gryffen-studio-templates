            imageSizes={[
                [520, 500],
                [520, 1196],
            ]}
            alt="Archytech Design Image"
            classList='max-w-full'
            imgClassList="min-w-full max-h-[600px] 2xl:max-h-[800px] pb-10 px-6 md:pb-20 lg:px-24"
