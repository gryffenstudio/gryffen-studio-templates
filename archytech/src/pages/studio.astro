---
import Hero from "../components/Hero.astro";
import ScrollProgress from "../components/ScrollProgress.astro";
import Layout from "../layouts/Layout.astro";
import heroImage from '../assets/images/Studio-Hero.png';
import heroImageSM from '../assets/images/Studio-Hero-SM.png';
import studioArchytechImage from '../assets/images/Studio-Archytech.png';
import studioArchytechImageSM from '../assets/images/Studio-Archytech-SM.png';
import studioDesignImage from '../assets/images/Studio-Design.png';
import teamHeroImage from '../assets/images/Team-Hero.png';
import CustomImage from "../components/CustomImage.astro";
import SectionDropdown from "../components/SectionDropdown.astro";
import ContactUsSection from "../components/ContactUsSection.astro";

---

<Layout 
    title='Studio - Archytech'
    description='Building Dreams As a Team'
    robots={false}
>
    <Hero heroBackgroundImgSrcList={[heroImageSM, heroImage]} alt='Projects Hero Image'>
        <div class='bottom-10 z-20 absolute flex w-full flex-col space-y-8 md:space-y-10'>
            <h1 class='hero-h1 bottom-0 tracking-wide px-6 lg:px-20'>Studio</h1>
            <div class='px-6 lg:px-20'>
                <ScrollProgress
                    isHeroScrollProgress={true}
                    barColor='bg-brand-black'
                    progressColor='bg-brand-gray'
                    barHeight='h-48 lg:h-56'
                    progress='bottom-[75%]'
                />
            </div>
        </div>
        <div
            class='bg-brand-black bg-blend-luminosity md:backdrop-blur-xl bg-opacity-20 z-10 absolute top-0 left-0 w-full md:w-[43%] h-full'
        >
        </div>
    </Hero>
    <main class="w-full items-center justify-center">
        <section class="flex flex-col w-full items-start justify-end space-y-10 pb-10 px-6 md:py-20 lg:px-24 md:flex-row md:space-x-16 md:space-y-0">
                <CustomImage
                    mobileImgUrl={studioArchytechImageSM}
                    desktopImgUrl={studioArchytechImage}
                    imageSizes={[
                        [327, 500],
                        [598, 993],
                    ]}
                    alt="Archytech Historical Image"
                    classList='hidden md:block w-1/2 h-auto'
                    imgClassList=""
                />
            <div class="relative flex flex-col space-y-10 md:w-1/2">
                <h2 class='text-brand-black text-start font-semibold place-self-start text-2xl lg:text-3xl relative tracking-wide'>
                        ARCHYTECH DESIGN
                        <span
                            class='after:absolute after:block after:w-[20%] after:h-[3px] after:bg-brand-black after:mt-2 after:rounded-full'
                        ></span>
                </h2>
                <p class="text-brand-black leading-loose">
