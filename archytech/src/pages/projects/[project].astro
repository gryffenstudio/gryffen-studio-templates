---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';
import ScrollProgress from '../../components/ScrollProgress.astro';
import CustomImage from '../../components/CustomImage.astro';
import Carousel from '../../components/Carousel';
import ContactUsSection from '../../components/ContactUsSection.astro';

export async function getStaticPaths() {
    const projects = await getCollection('projects')
    return projects.map((project: any) => ({
        params: {
            project: project.data.slug, 
        },
        props: { project }
    }))
}

const { project } = Astro.props;

let projectCategoryText = ''

switch(project.data.category){
    case 'residential': projectCategoryText = 'Residential'; break;
    case 'commercial': projectCategoryText = 'Commercial'; break;
    case 'in_progress': projectCategoryText = 'In Progress'; break;
}
---
<Layout
    title=`${project.data.projectName} | Archytech ${project.data.category} Projects`
    description='Successful Projects Completed and In Progress for Archytech'
    robots={false}
>
    <Hero heroBackgroundImgSrcList={[project.data.heroImageMobile, project.data.heroImageDesktop]} alt={project.data.heroImageAlt}>
        <div class='bottom-10 z-20 absolute flex w-full flex-col space-y-8 md:space-y-10'>
            <h1 class='hero-h1 bottom-0 tracking-wide px-6 lg:-mb-8 lg:px-20'>{project.data.projectName}</h1>
            <div class='block lg:flex space-y-8 h-full justify-between px-6 lg:px-20'>
                <div class="relative right-0 place-self-end flex flex-col text-white lg:hidden">
                    <p class="font-bold">{project.data.location.toUpperCase()}</p>
                    <p class="font-bold">SIZE: <span class="font-normal">{project.data.buildingSize}</span></p>
                    <p class="font-bold">YEAR: <span class="font-normal">{project.data.completionYear}</span></p>
                </div>
                <ScrollProgress
                    isHeroScrollProgress={true}
                    barColor='bg-brand-black'
                    progressColor='bg-brand-gray'
                    barHeight='h-48 lg:h-56'
                    progress='bottom-[75%]'
                />
                <div class="hidden relative right-0 place-self-end lg:flex flex-col text-white">
                    <p class="font-bold">{project.data.location.toUpperCase()}</p>
                    <p class="font-bold">SIZE: <span class="font-normal">{project.data.buildingSize}</span></p>
                    <p class="font-bold">YEAR: <span class="font-normal">{project.data.completionYear}</span></p>
                </div>
            </div>
        </div>
    </Hero>

    <main class="w-full items-center justify-center">
        <section class="flex flex-col items-start justify-center space-y-10 py-8 px-6 lg:py-20 lg:px-40 md:flex-row md:justify-between md:space-y-0">
            <div class="relative flex flex-col space-y-10 md:w-1/2">
                <h2 class='text-brand-black text-start font-semibold place-self-start text-2xl lg:text-3xl relative tracking-wide'>
                        Design Brief
                        <span
                            class='after:absolute after:block after:w-[40%] after:h-[3px] after:bg-brand-black after:mt-2 after:rounded-full'
                        ></span>
                </h2>
                <p class="text-brand-black leading-loose md:w-3/4">
                Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. 
                Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. 
                Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat 
                cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.
                Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. 
                Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. 
                Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat 
                cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.
                </p>
            </div>
            <CustomImage
            mobileImgUrl={project.data.designBriefImageMobile}
            desktopImgUrl={project.data.designBriefImageDesktop}
            imageSizes={[
                [327, 327],
                [598, 681],
            ]}
            alt={project.data.designBriefImageAlt}
            classList='place-self-center flex justify-center w-full md:w-1/2 md:block md:justify-normal'
            imgClassList="min-w-full h-auto"
            />
        </section>
        <section class="flex flex-col place-content-center w-full py-8 px-6 lg:px-40">
                <h2
                    class='text-brand-black text-start font-semibold place-self-start text-2xl mb-8 lg:text-3xl relative tracking-wide'
                >
                    Interior
                    <span
                        class='after:absolute after:block after:w-[40%] after:h-[3px] after:bg-brand-black after:mt-2 after:rounded-full'
                    ></span>
                </h2>
            <Carousel mobileImages={project.data.interiorImagesMobile} desktopImages={project.data.interiorImagesDesktop} client:load />
        </section>
        <section class="flex flex-col place-content-center w-full py-8 px-6 lg:px-40">
                <h2
                    class='text-brand-black text-start font-semibold place-self-start text-2xl mb-8 lg:text-3xl relative tracking-wide'
                >
                    Exterior
                    <span
                        class='after:absolute after:block after:w-[40%] after:h-[3px] after:bg-brand-black after:mt-2 after:rounded-full'
                    ></span>
                </h2>
            <Carousel mobileImages={project.data.exteriorImagesMobile} desktopImages={project.data.exteriorImagesDesktop} client:load />
        </section>
    </main>
    <ContactUsSection />
</Layout>
