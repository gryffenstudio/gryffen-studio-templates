---
import CustomImage from './CustomImage.astro';
import ScrollProgress from './ScrollProgress.astro';

interface Props {
    sectionNum: number;
    sectionHeader: string;
    sectionDescription: string;
    sectionProgress: string;
    imageSrc: ImageMetadata[];
}
const { sectionNum, sectionHeader, sectionDescription, sectionProgress, imageSrc } =
    Astro.props satisfies Props;
---

{
    sectionNum % 2 === 1 ? (
        <section class='flex w-full flex-col space-y-8 px-6 py-8 lg:flex-row lg:justify-around lg:space-y-0 lg:px-16 lg:py-24'>
            <div class='flex space-x-8 lg:mr-8 lg:w-1/2'>
                <div class='flex flex-col items-center space-y-2'>
                    <span class='text-3xl font-black text-brand-black'>0{sectionNum}</span>
                    <ScrollProgress
                        isHeroScrollProgress={false}
                        barColor='bg-brand-black'
                        progressColor='bg-brand-gray'
                        barHeight='h-64 lg:h-[358px]'
                        progress={sectionProgress}
                    />
                </div>
                <div class='flex flex-col'>
                    <h2 class='relative place-self-start text-start text-2xl font-semibold tracking-wide text-brand-black lg:text-3xl'>
                        {sectionHeader}
                        <span class='after:absolute after:mt-2 after:block after:h-[3px] after:w-[70px] after:bg-brand-black' />
                    </h2>
                    <p class='mt-16 text-brand-black'>{sectionDescription}</p>
                </div>
            </div>
            <CustomImage
                mobileImgUrl={imageSrc[0]}
                desktopImgUrl={imageSrc[1]}
                imageSizes={[
                    [327, 448],
                    [710, 448],
                ]}
                alt={`Section ${sectionNum} Image`}
                classList='place-self-center'
            />
        </section>
    ) : (
        <section class='flex w-full flex-col space-y-8 bg-brand-black px-6 pb-8 lg:flex-row lg:justify-around lg:space-y-0 lg:px-16 lg:py-24'>
            <CustomImage
                mobileImgUrl={imageSrc[0]}
                desktopImgUrl={imageSrc[1]}
                imageSizes={[
                    [327, 448],
                    [710, 448],
                ]}
                alt={`Section ${sectionNum} Image`}
                classList='hidden lg:block'
            />
            <div class='flex h-full space-x-8 lg:ml-8 lg:w-1/2'>
                <div class='flex flex-col items-center space-y-2'>
                    <span class='text-3xl font-black text-white'>0{sectionNum}</span>
                    <ScrollProgress
                        isHeroScrollProgress={false}
                        barColor='bg-brand-gray'
                        progressColor='bg-white'
                        barHeight='h-64 lg:h-[358px]'
                        progress={sectionProgress}
                    />
                </div>
                <div class='flex flex-col'>
                    <h2 class='relative place-self-start text-start text-2xl font-semibold tracking-wide text-white lg:text-3xl'>
                        {sectionHeader}
                        <span class='after:absolute after:mt-2 after:block after:h-[3px] after:w-[70px] after:bg-white' />
                    </h2>
                    <p class='mt-16 text-white'>{sectionDescription}</p>
                </div>
            </div>
            <CustomImage
                mobileImgUrl={imageSrc[0]}
                desktopImgUrl={imageSrc[1]}
                imageSizes={[
                    [327, 448],
                    [710, 448],
                ]}
                alt={`Section ${sectionNum} Image`}
                classList='lg:hidden place-self-center'
            />
        </section>
    )
}
