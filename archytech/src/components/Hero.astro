---
interface Props {
    heroBackgroundImgSrcList: string[];
}
const { heroBackgroundImgSrcList } = Astro.props satisfies Props;
---

<header class='h-full w-full px-6 bg-brand-black bg-blend-luminosity'>
    <!-- Mobile Image -->
    <img
        class='absolute inset-0 w-full h-full object-cover object-center block md:hidden'
        src={heroBackgroundImgSrcList[0]}
        alt='Mobile Image'
        decoding='async'
        loading='lazy'
    />
    <!-- Desktop Image -->
    <img
        class='absolute inset-0 w-full h-full object-cover object-center hidden md:block'
        src={heroBackgroundImgSrcList[1]}
        alt='Desktop Image'
        decoding='async'
        loading='lazy'
    />
    <slot />
</header>
