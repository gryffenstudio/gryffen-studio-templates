---
import Image from 'astro/components/Image.astro';
import heroImage from '../assets/images/Landing-Hero.png';
import heroImageSM from '../assets/images/Landing-Hero-SM.png';
---

<header class='h-full w-full px-12 bg-brand-black bg-blend-luminosity'>
    <!-- Mobile Image -->
    <img
        class='absolute inset-0 w-full h-full object-cover object-center block md:hidden'
        src={heroImageSM.src}
        alt='Mobile Image'
        decoding='async'
        loading='lazy'
    />
    <!-- Desktop Image -->
    <img
        class='absolute inset-0 w-full h-full object-cover object-center hidden md:block'
        src={heroImage.src}
        alt='Desktop Image'
        decoding='async'
        loading='lazy'
    />
    <slot />
</header>
