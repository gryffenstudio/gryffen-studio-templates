---
import { Image } from 'astro:assets';

interface Props {
    heroBackgroundImgSrcList: ImageMetadata[];
    alt: string;
}
const { heroBackgroundImgSrcList, alt } = Astro.props satisfies Props;
---

<header class='relative h-full w-full bg-brand-black bg-blend-luminosity'>
    <!-- Mobile Image -->
    <Image
        class='absolute inset-0 block h-full w-full object-cover object-center md:hidden'
        src={heroBackgroundImgSrcList[0]}
        alt={alt}
        width='375'
        height='812'
        loading='eager'
    />

    <!-- Desktop Image -->
    <Image
        class='absolute inset-0 hidden h-full w-full object-cover object-center md:block'
        src={heroBackgroundImgSrcList[1]}
        alt={alt}
        width='1440'
        height='1024'
        loading='eager'
    />
    <slot />
</header>
