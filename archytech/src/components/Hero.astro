---
import { Image } from 'astro:assets';

interface Props {
    heroBackgroundImgSrcList: ImageMetadata[];
    alt: string;
}
const { heroBackgroundImgSrcList, alt } = Astro.props satisfies Props;
---

<header class='relative h-full w-full bg-brand-black bg-blend-luminosity'>
    <!-- Mobile Image -->
    <Image
        class='absolute inset-0 w-full h-full object-cover object-center block md:hidden'
        src={heroBackgroundImgSrcList[0]}
        alt={alt}
        width="375"
        height="812"
    />

    <!-- Desktop Image -->
    <Image
        class='absolute inset-0 w-full h-full object-cover object-center hidden md:block'
        src={heroBackgroundImgSrcList[1]}
        alt={alt}
        width="1440"
        height="1024"
    />
    <slot />
</header>
