<div class='flex flex-col space-y-24 rounded-2xl lg:max-h-[530px] lg:flex-row lg:space-y-0'>
    <div class='lg:bg-brand-gray flex w-full flex-col lg:w-2/3 lg:rounded-l-2xl lg:px-24 lg:py-24'>
        <h3 class='mb-4 text-xl font-bold capitalize leading-[30px] text-white lg:text-black'>
            what can we do for you?
        </h3>

        <p class='mb-8 text-sm text-white lg:text-black'>
            Fill out the form below to get in touch with our experienced team of contractors,
            painters, architects and more.
        </p>
        <form
            class='lg: mb-4 flex flex-col space-y-6 lg:grid lg:grid-cols-2 lg:gap-6 lg:space-y-0'
            action='/'
        >
            <div class='relative'>
                <input placeholder='' id='name' type='text' class='peer w-full' />
                <label
                    class='-translate-y-9 peer-placeholder-shown:-translate-y-1 peer-placeholder-shown:scale-100 peer-focus:-translate-y-9 peer-focus:scale-75 rtl:peer-focus:left-auto rtl:peer-focus:translate-x-2'
                    >Name</label
                >
            </div>
            <div class='relative'>
                <input placeholder='' id='email' type='email' class='peer w-full' />
                <label
                    class='-translate-y-9 peer-placeholder-shown:-translate-y-1 peer-placeholder-shown:scale-100 peer-focus:-translate-y-9 peer-focus:scale-75 rtl:peer-focus:left-auto rtl:peer-focus:translate-x-2'
                    >Email</label
                >
            </div>
            <div class='relative'>
                <select id='reason' class='select-input peer h-full w-full cursor-pointer'>
                    <option value='' disabled selected></option>
                    <option value='residential'>Residential</option>
                    <option value='commercial'>Commercial</option>
                </select>
                <span
                    aria-label='DropDown Button'
                    class='pointer-events-none absolute right-3 top-2 z-10 h-4 w-4 items-center justify-center rounded-full bg-black p-3 disabled:opacity-20 lg:top-2.5 lg:flex'
                >
                </span>
                <span
                    class='arrow-icon icon-[simple-line-icons--arrow-down] pointer-events-none absolute right-[18px] top-[14.5px] z-10 h-3 w-3 transform text-white duration-300 peer-focus:rotate-180 lg:right-[18px] lg:top-[16px]'
                ></span>
                <label
                    class='label-select pointer-events-none -translate-y-[5px] scale-100 peer-focus:-translate-y-9 peer-focus:scale-75 rtl:peer-focus:left-auto rtl:peer-focus:translate-x-2'
                    >Reason For Contacting</label
                >
            </div>
            <div class='relative'>
                <input placeholder='' type='tel' id='phone' name='phone' class='peer w-full' />
                <label
                    class='-translate-y-9 peer-placeholder-shown:-translate-y-1 peer-placeholder-shown:scale-100 peer-focus:-translate-y-9 peer-focus:scale-75 rtl:peer-focus:left-auto rtl:peer-focus:translate-x-2'
                    >Phone</label
                >
            </div>
            <div class='relative col-span-2'>
                <textarea placeholder='' class='peer w-full'></textarea>
                <label
                    class='-translate-y-9 peer-placeholder-shown:-translate-y-1 peer-placeholder-shown:scale-100 peer-focus:-translate-y-9 peer-focus:scale-75 rtl:peer-focus:left-auto rtl:peer-focus:translate-x-2'
                    >Message</label
                >
            </div>
        </form>
        <button type='submit' class='primary-btn w-full lg:w-[132px]'>
            <span class='font-medium leading-normal tracking-tight text-black'> Submit </span>
        </button>
    </div>
    <div
        class='hidden w-1/3 flex-col items-center justify-center rounded-r-2xl bg-white py-24 lg:flex'
    >
        <div class='flex flex-col'>
            <h3 class='mb-4 text-xl font-bold leading-[30px]'>Contact Information</h3>

            <div class='mb-4 flex items-center space-x-6'>
                <a
                    href='https://maps.google.com/?q=0000+Design+Drive+Denver+Colorado'
                    class=`flex items-center justify-center p-1.5 h-8 w-8 rounded-full bg-black hover:opacity-50`
                    aria-label='Construx Location Link'
                >
                    <span class='icon-[ep--location] h-6 w-6 text-white'></span>
                </a>
                <div class='flex flex-col space-y-1'>
                    <span class='font-bold leading-[30px] text-[#303136]'>Cnstrx Office</span>
                    <span class='text-sm text-[#303136]'>000 Parkway Blg. 16</span>
                    <span class='text-sm text-[#303136]'>Colorado Springs, CO</span>
                </div>
            </div>
            <div class='mb-4 flex items-center space-x-6'>
                <a
                    href=`tel:000000000`
                    class=`flex items-center justify-center h-8 w-8 p-1.5 rounded-full bg-black hover:opacity-50`
                    aria-label='Construx Location Link'
                >
                    <span class='icon-[mage--phone] h-6 w-6 text-white'></span>
                </a>
                <div class='flex flex-col space-y-1'>
                    <span class='font-bold leading-[30px] text-[#303136]'>Call Us</span>
                    <span class='text-sm text-[#303136]'>000-000-0000</span>
                </div>
            </div>
            <div class='mb-4 flex items-center space-x-6'>
                <a
                    href='mailto:mail@construx.construction'
                    class=`flex items-center justify-center p-1.5 h-8 w-8 rounded-full bg-black hover:opacity-50`
                    aria-label='Construx Location Link'
                >
                    <span class='icon-[eva--email-outline] h-6 w-6 text-white'></span>
                </a>
                <div class='flex flex-col space-y-1'>
                    <span class='font-bold leading-[30px] text-[#303136]'>Mail Us</span>
                    <span class='text-sm text-[#303136]'>mail@construx.construction</span>
                </div>
            </div>
            <div class='mb-4 flex items-center space-x-6'>
                <a
                    href='https://maps.google.com/?q=0000+Design+Drive+Denver+Colorado'
                    class=`flex items-center justify-center p-1.5 h-8 w-8 rounded-full bg-black hover:opacity-50`
                    aria-label='Construx Location Link'
                >
                    <span class='icon-[ri--building-4-line] h-6 w-6 text-white'></span>
                </a>
                <div class='flex flex-col space-y-1'>
                    <span class='font-bold leading-[30px] text-[#303136]'>Opening Hours</span>
                    <span class='text-sm text-[#303136]'>Mon-Fri: 8AM - 5PM</span>
                    <span class='text-sm text-[#303136]'>Sat-Sun: CLOSED</span>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const selectInputs = document.querySelectorAll<HTMLSelectElement>('.select-input');
        const labelSelect = document.querySelector<HTMLLabelElement>('.label-select');
        const labels = document.querySelectorAll<HTMLLabelElement>('label');
        const inputs = document.querySelectorAll<HTMLInputElement>('input, select, textarea');

        // Handle change event for select elements
        selectInputs.forEach((select) => {
            select.addEventListener('change', (event) => {
                const target = event.target as HTMLSelectElement;
                if (target.value) {
                    labelSelect?.classList.remove('-translate-y-[5px]');
                    labelSelect?.classList.add('-translate-y-9');
                    labelSelect?.classList.remove('scale-100');
                    labelSelect?.classList.add('scale-75');
                } else {
                    labelSelect?.classList.add('-translate-y-[5px]');
                    labelSelect?.classList.remove('-translate-y-9');
                    labelSelect?.classList.add('scale-100');
                    labelSelect?.classList.remove('scale-75');
                }
            });
        });

        // Force repaint for iOS Safari
        labels.forEach((label) => {
            label.style.display = 'none';
            label.offsetHeight; // Trigger a reflow
            label.style.display = '';
        });

        // Handle initial state for inputs that may have values pre-filled
        inputs.forEach((input) => {
            const label = input.nextElementSibling as HTMLLabelElement;
            if (input.value) {
                label.classList.remove('-translate-y-[5px]', 'scale-100');
                label.classList.add('-translate-y-9', 'scale-75');
            }
        });
    });
</script>
