---
interface Props {
    title: string;
    header: string;
    body: string;
    href: string;
    icon: string;
    iconSide: string;
    backgroundColor: string;
}

const { icon, iconSide, backgroundColor, href, title, header, body } = Astro.props satisfies Props;
---

<div
    class=`flex flex-col w-[22rem] ${backgroundColor} items-center justify-center md:justify-evenly rounded-xl p-2 shadow-md md:flex-row md:h-[28rem] md:w-[46rem] lg:h-[28rem] lg:w-[62rem] xl:w-[78rem]`
>
    {iconSide == 'right' ?
        <div class='flex flex-col items-center justify-evenly my-10 md:my-0 space-y-8 md:space-y-12 md:w-[50%]'>
            <div class="flex flex-col space-y-6 w-[60%]">
                <h4 class="text-left font-visby-medium text-lg text-white">{title}</h4>
                <h2 class="text-left font-visby-medium text-3xl text-white">{header}</h2>
                <p class="text-left font-visby-medium text-md text-white">{body}</p>
            </div>
            <a href={href} class="bg-white w-[70%] md:w-[40%] md:mr-[5rem] h-[3rem] lg:w-[30%] lg:mr-[10rem] xl:mr-[14rem] rounded-full xl:w-[25%] xl:h-[3rem] flex items-center justify-center font-visby-medium text-lg text-black">Learn More</a>
        </div>
        <div class="hidden md:flex md:w-[50%]">
            <span class=`flex ${icon} h-[22rem] w-full rounded-full text-white` />
        </div> :
        <div class="hidden md:flex w-[50%]">
            <span class=`flex ${icon} h-[22rem] w-full rounded-full text-white` />
        </div>
        <div class='flex flex-col items-center justify-evenly my-10 md:my-0 space-y-8 md:space-y-12 md:w-[50%]'>
            <div class="flex flex-col space-y-6 w-[60%]">
                <h4 class="text-left font-visby-medium text-lg text-white">{title}</h4>
                <h2 class="text-left font-visby-medium text-3xl text-white">{header}</h2>
                <p class="text-left font-visby-medium text-md text-white">{body}</p>
            </div>
            <a href={href} class="bg-white w-[70%] md:w-[40%] md:mr-[5rem] h-[3rem] lg:w-[30%] lg:mr-[10rem] xl:mr-[14rem] rounded-full xl:w-[25%] xl:h-[3rem] flex items-center justify-center font-visby-medium text-lg text-black">Learn More</a>
        </div>}
</div>
