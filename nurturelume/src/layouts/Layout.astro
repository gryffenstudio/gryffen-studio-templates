---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import SEO from '../components/SEO.astro';
interface Props {
    title: string;
    description: string;
    robots: boolean;
}

const { title, description, robots } = Astro.props satisfies Props;
---
<!doctype html>
<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta name='description' content={description} />
        <meta name='viewport' content='width=device-width, initial-scale=1' />
        <link rel='icon' type='image/png' href='/images/Logo.png' />
        <meta name='generator' content={Astro.generator} />
        <SEO title={title} description={description} url={Astro.url} robots={robots} />
        <title>{title}</title>

        <!-- Google tag (gtag.js) -->
        <script type="text/partytown" is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-4QEEVC1TVV"></script>
        <script type="text/partytown" is:inline>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());

          gtag('config', 'G-4QEEVC1TVV');
        </script>
    </head>
    <body class='h-dvh overflow-x-hidden'>
        <Navbar />
        <slot />
        <Footer />
    </body>
</html>
